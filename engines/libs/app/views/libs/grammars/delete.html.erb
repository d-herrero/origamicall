<%= form String.new, :url => grammar_path(@grammar), :html => { :id => "delete_grammar_#{@grammar.id}_form", :method => :delete } do |f| %>
  <div class="alert alert-warning fade in">
    <%= icon :warning, String.new, class: 'fa-fw' %> <%= raw I18n.t('libs.grammars.delete.text', name: @grammar.name) %>
  </div>

  <%= submit_tag I18n.t('actions.delete'), :class => 'btn btn-primary' %>
  <%= hlink_to I18n.t('actions.return'), grammars_path, :class => 'btn btn-default' %>
<% end %>

<div class="ribbon-content">
  <%= hlink_to I18n.t('actions.edit'), edit_grammar_path(@grammar), :class => 'btn btn-default btn-xs' %>
</div>