<h1 class="page-title">
  <%= icon :sitemap, I18n.t('ivr.trees.create.title'), class: 'fa-fw' %>
</h1>

<section id="widget-grid">
  <div id="create_tree" class="jarviswidget jarviswidget-color-darken" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false">
    <header>
      <span class="widget-icon"><%= icon :edit %></span>
      <h2><%= I18n.t('misc.data') %></h2>
    </header>

    <div>
      <div class="widget-body no-padding">
        <%= form(@tree, :html => { :class => 'smart-form' }) do |f| %>
          <%= render 'form', f: f %>

          <footer>
            <%= f.submit I18n.t('actions.create'), :class => 'btn btn-primary' %>
            <% if params.include? :window %>
              <%= link_to I18n.t('actions.close'), 'javascript:close_window();', :class => 'btn btn-default' %>
            <% else %>
              <%= hlink_to I18n.t('actions.return'), trees_path, :class => 'btn btn-default' %>
            <% end %>
          </footer>
        <% end %>
      </div>
    </div>
  </div>
</section>

<div class="ribbon-content">
  <%= hlink_to I18n.t('misc.list'), trees_path, :class => 'btn btn-default btn-xs' %>
</div>